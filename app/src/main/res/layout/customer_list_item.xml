<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivAnimalImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/placeholderimg"
            android:importantForAccessibility="no" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="0.5dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@id/ivAnimalImage"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/divider">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="18sp"
                android:fontFamily="@font/poppins"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvCustomerMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:textSize="16sp"
                android:text="91xxxxxxxxx"
                android:fontFamily="@font/poppins"
                tools:ignore="HardcodedText"
                app:drawableStartCompat="@drawable/baseline_call_24" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>